            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/watchCnt"
            android:text="wa"
            android:layout_weight="2"
            android:layout_width="0px"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/forkCnt"
            android:text="fo"
            android:layout_weight="2"
            android:layout_width="0px"
            android:layout_height="wrap_content"/>

        <TextView

